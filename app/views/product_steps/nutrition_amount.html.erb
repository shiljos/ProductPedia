<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">Nutrition amounts</div>
        <div class="panel-body">
          <%= form_tag(wizard_path, method: :put) do %>
            <% @prod_nuts.each do | prod | %>
              <br/>
              <%= label_tag prod.nutrition.name, prod.amount %> <br/>
              <%= text_field_tag "nutrients[#{prod.id}][amount]" ,nil, class: "form-control"%><br/>
            <% end %>
            <br/><br/>
            <%= submit_tag("Next", class: "btn btn-primary") %>
          <% end %> 
        </div>
      </div>       
    </div>
  </div>
</div>      